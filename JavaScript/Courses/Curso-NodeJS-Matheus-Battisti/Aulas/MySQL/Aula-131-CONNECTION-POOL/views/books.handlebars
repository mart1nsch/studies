<h1>Livros</h1>
{{#each books}}
    <div class="container-books">
        <h2>Título: <a href="/books/{{this.ID}}">{{this.TITULO}}</a></h2>
        <h3>Número de Páginas: {{this.NUMERO_PAGINAS}}</h3>
        <a href="/books/edit/{{this.ID}}">Editar</a>
        <form action="/books/delete" method="POST">
            <input type="hidden" name="id" value="{{this.ID}}">
            <input type="submit" value="Deletar">
        </form>
    </div>
{{/each}}
<a href="/">Voltar</a>